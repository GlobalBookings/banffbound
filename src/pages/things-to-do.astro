---
import BaseLayout from '../layouts/BaseLayout.astro';

const attractions = [
  {
    name: 'Banff Gondola',
    description: 'Soar to the summit of Sulphur Mountain for panoramic views of six mountain ranges. The 8-minute ride takes you 2,281m above sea level to a boardwalk, interpretive centre, and sky bistro.',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=600&q=80',
    type: 'Sightseeing',
    season: 'Year-round',
    duration: '2-3 hours',
  },
  {
    name: 'Lake Louise',
    description: 'One of the most photographed lakes in the world. The turquoise glacial waters set against Victoria Glacier create a postcard-perfect scene. Walk the lakeshore or hike to the Lake Agnes Tea House.',
    image: 'https://images.unsplash.com/photo-1503614472-8c93d56e92ce?w=600&q=80',
    type: 'Nature',
    season: 'Year-round',
    duration: 'Half day',
  },
  {
    name: 'Moraine Lake',
    description: 'The iconic Valley of the Ten Peaks setting. The stunning blue waters surrounded by dramatic peaks make this one of Canada\'s most treasured natural landmarks. Arrive early for the best experience.',
    image: 'https://images.unsplash.com/photo-1503614472-8c93d56e92ce?w=600&q=80',
    type: 'Nature',
    season: 'June - October',
    duration: 'Half day',
  },
  {
    name: 'Johnston Canyon',
    description: 'Walk along the catwalks bolted to the canyon walls to see the stunning Lower and Upper Falls. In winter, the frozen waterfalls create a magical ice wonderland perfect for ice walks.',
    image: 'https://images.unsplash.com/photo-1433086966358-54859d0ed716?w=600&q=80',
    type: 'Hiking',
    season: 'Year-round',
    duration: '2-4 hours',
  },
  {
    name: 'Banff Upper Hot Springs',
    description: 'Soak in naturally heated mineral waters at 37-40 degrees Celsius while surrounded by mountain views. These historic hot springs have been welcoming visitors since the 1880s.',
    image: 'https://images.unsplash.com/photo-1544161515-4ab6ce6db874?w=600&q=80',
    type: 'Relaxation',
    season: 'Year-round',
    duration: '1-2 hours',
  },
  {
    name: 'Bow Falls',
    description: 'A short walk from downtown Banff, these wide cascading falls on the Bow River are beautiful year-round. Famous for appearing in the 1953 Marilyn Monroe film "River of No Return."',
    image: 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?w=600&q=80',
    type: 'Sightseeing',
    season: 'Year-round',
    duration: '30 min',
  },
  {
    name: 'Cave and Basin National Historic Site',
    description: 'The birthplace of Canada\'s national parks. Explore the cave where hot springs were discovered in 1883 and learn about the history that led to the creation of Banff National Park.',
    image: 'https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?w=600&q=80',
    type: 'History',
    season: 'Year-round',
    duration: '1-2 hours',
  },
  {
    name: 'Minnewanka Lake Cruise',
    description: 'Take a scenic boat cruise on the largest lake in Banff National Park. Learn about the area\'s history, spot wildlife along the shore, and take in the dramatic mountain scenery.',
    image: 'https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?w=600&q=80',
    type: 'Sightseeing',
    season: 'May - October',
    duration: '1.5 hours',
  },
  {
    name: 'Vermilion Lakes',
    description: 'Three stunning lakes just minutes from Banff townsite, famous for spectacular sunset photography. Watch for ospreys, bald eagles, and elk along the scenic drive.',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=600&q=80',
    type: 'Nature',
    season: 'Year-round',
    duration: '1-2 hours',
  },
];
---

<BaseLayout title="Things to Do" description="Discover the best things to do in Banff - from iconic sightseeing spots to hidden gems in the Canadian Rockies.">
  <section class="page-hero">
    <img
      src="https://images.unsplash.com/photo-1609198092458-38a293c7ac4b?w=1600&q=80"
      alt="Banff mountain landscape"
      class="page-hero-bg"
    />
    <div class="page-hero-content">
      <span class="badge">Explore</span>
      <h1>Things to Do in Banff</h1>
      <p>From iconic landmarks to hidden gems, discover the best experiences that Banff National Park has to offer.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="grid grid-3">
        {attractions.map(item => (
          <div class="card">
            <img src={item.image} alt={item.name} class="card-image" />
            <div class="card-body">
              <span class="tag">{item.type}</span>
              <h3>{item.name}</h3>
              <p>{item.description}</p>
              <div class="card-meta">
                <span>&#128197; {item.season}</span>
                <span>&#9202; {item.duration}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="tip-section">
    <div class="container">
      <div class="tip-card">
        <h3>&#128161; Insider Tip</h3>
        <p>For the best experience at popular spots like Moraine Lake and Lake Louise, arrive before 8am or after 4pm. A Parks Canada shuttle reservation is required for Moraine Lake during peak season (June-October). Book well in advance at reservation.pc.gc.ca.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .tip-section {
    padding: 0 0 4rem;
  }

  .tip-card {
    background: var(--color-bg-alt);
    border-left: 4px solid var(--color-accent);
    border-radius: var(--radius);
    padding: 2rem;
  }

  .tip-card h3 {
    margin-bottom: 0.5rem;
  }

  .tip-card p {
    color: var(--color-text-light);
    line-height: 1.7;
  }
</style>
