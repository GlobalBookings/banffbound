---
const currentPath = Astro.url.pathname;
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/things-to-do', label: 'Things to Do' },
  { href: '/eat-and-drink', label: 'Eat & Drink' },
  { href: '/lakes', label: 'Lakes' },
  { href: '/activities', label: 'Activities' },
  { href: '/tours', label: 'Tours' },
  { href: '/hotel-directory', label: 'Hotels' },
  { href: '/trail-map', label: 'Trail Map' },
  { href: '/trip-builder', label: 'Trip Builder' },
  { href: '/blog', label: 'Guides' },
];
---

<div class="utility-bar" id="utility-bar">
  <div class="container utility-inner">
    <div class="utility-links">
      <a href="/events" class="utility-link">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
        What's Happening
      </a>
      <a href="/weather-webcams" class="utility-link">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/><circle cx="12" cy="12" r="4"/></svg>
        Weather & Webcams
      </a>
      <a href="https://parks.canada.ca/pn-np/ab/banff/visit/pass" target="_blank" rel="noopener" class="utility-link utility-link--pass">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 5h2a2 2 0 012 2v12a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h2"/><rect x="9" y="3" width="6" height="4" rx="1"/><path d="M9 14l2 2 4-4"/></svg>
        Buy Your Park Pass
      </a>
    </div>

  </div>
</div>

<header class="site-header" id="site-header">
  <div class="container header-inner">
    <a href="/" class="logo">
      <span class="logo-icon">&#9968;</span>
      <span class="logo-text">BanffBound</span>
    </a>
    <nav class="main-nav" id="main-nav">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
        >
          {link.label}
        </a>
      ))}
    </nav>
    <button class="menu-toggle" id="menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style>
  .utility-bar {
    background: var(--color-primary);
    color: var(--color-white);
    font-size: 0.8rem;
    transition: transform 0.3s ease;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1001;
  }

  .utility-bar.hidden {
    transform: translateY(-100%);
  }

  .utility-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 36px;
  }

  .utility-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .utility-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: rgba(255,255,255,0.85);
    padding: 0.3rem 0.75rem;
    border-radius: 4px;
    transition: all 0.2s ease;
    font-weight: 500;
    letter-spacing: 0.01em;
  }

  .utility-link:hover {
    color: #fff;
    background: rgba(255,255,255,0.1);
  }

  .utility-link--pass {
    color: var(--color-accent);
    font-weight: 600;
  }

  .utility-link--pass:hover {
    color: var(--color-accent-light);
    background: rgba(255,255,255,0.1);
  }

  .site-header {
    position: fixed;
    top: 36px;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255,255,255,0.97);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0,0,0,0.06);
    transition: all 0.3s ease;
  }

  .site-header.scrolled {
    top: 0;
    box-shadow: 0 2px 20px rgba(0,0,0,0.08);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .logo-icon {
    font-size: 1.6rem;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 0.15rem;
  }

  .nav-link {
    padding: 0.45rem 0.85rem;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-text);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background: var(--color-bg-alt);
    color: var(--color-primary);
  }

  .nav-link.active {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-dark);
    transition: all 0.3s ease;
  }

  @media (max-width: 900px) {
    .utility-links {
      gap: 0;
    }
    .utility-link {
      padding: 0.3rem 0.5rem;
      font-size: 0.72rem;
    }
  }

  @media (max-width: 768px) {
    .menu-toggle { display: flex; }
    .main-nav {
      display: none;
      position: absolute;
      top: 64px;
      left: 0;
      right: 0;
      background: var(--color-white);
      flex-direction: column;
      padding: 1rem;
      border-bottom: 1px solid rgba(0,0,0,0.06);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }
    .main-nav.open { display: flex; }
    .nav-link { width: 100%; padding: 0.75rem 1rem; }
    .utility-link svg { display: none; }
    .utility-link { font-size: 0.7rem; padding: 0.3rem 0.4rem; }
  }

  @media (max-width: 480px) {
    .utility-link--pass span { display: none; }
    .utility-link { font-size: 0.65rem; padding: 0.25rem 0.3rem; gap: 0.2rem; }
  }
</style>

<script>
  const header = document.getElementById('site-header');
  const utilityBar = document.getElementById('utility-bar');
  const toggle = document.getElementById('menu-toggle');
  const nav = document.getElementById('main-nav');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    if (currentScroll > 50) {
      utilityBar?.classList.add('hidden');
      header?.classList.add('scrolled');
    } else {
      utilityBar?.classList.remove('hidden');
      header?.classList.remove('scrolled');
    }
    lastScroll = currentScroll;
  });

  toggle?.addEventListener('click', () => {
    nav?.classList.toggle('open');
  });
</script>
